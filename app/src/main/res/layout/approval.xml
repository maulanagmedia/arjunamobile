<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/layoutMenuDropdownJenisIJin"
                android:layout_width="@dimen/widthlayoutperiode"
                android:layout_height="@dimen/heightlayoutperiode"
                android:layout_centerInParent="true"
                android:background="@drawable/style_dropdown">

                <Spinner
                    android:id="@+id/dropdownApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:theme="@style/ThemeOverlay.AppCompat.Light" />
            </RelativeLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/listApprovalIjin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>