<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewApproval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="@dimen/dp10"
        card_view:cardPreventCornerOverlap="false"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:padding="@dimen/dp20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_cute"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_nama"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/drawer_profile"/>

                <TextView
                    android:id="@+id/lbl_nama"
                    android:layout_toEndOf="@id/img_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_labelplus" />

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_below="@id/lbl_nama"
                    android:layout_alignStart="@id/lbl_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_cute"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tanggal"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/drawer_jadwal"/>

                <TextView
                    android:id="@+id/lbl_tanggal"
                    android:layout_toEndOf="@id/img_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_labelplus" />

                <TextView
                    android:id="@+id/tv_tanggal"
                    android:layout_below="@id/lbl_tanggal"
                    android:layout_alignStart="@id/lbl_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutJamApproval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_cute"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_jam"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/time_blue"/>

                <TextView
                    android:id="@+id/lbl_jam"
                    android:layout_toEndOf="@id/img_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Menit"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_labelplus" />

                <TextView
                    android:id="@+id/tv_jam"
                    android:layout_alignStart="@id/lbl_jam"
                    android:layout_below="@id/lbl_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_cute"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_keterangan"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/icon_keterangan_approval"/>

                <TextView
                    android:id="@+id/lbl_keterangan"
                    android:layout_toEndOf="@id/img_keterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_labelplus" />

                <TextView
                    android:id="@+id/tv_keterangan"
                    android:layout_below="@id/lbl_keterangan"
                    android:layout_alignStart="@id/lbl_keterangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_cute"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_alasan"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:src="@drawable/icon_alasan_approval"/>

                <TextView
                    android:id="@+id/lbl_alasan"
                    android:layout_toEndOf="@id/img_alasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alasan"
                    android:textColor="#000000"
                    android:textSize="@dimen/default_labelplus" />

                <TextView
                    android:id="@+id/tv_alasan"
                    android:layout_below="@id/lbl_alasan"
                    android:layout_alignStart="@id/lbl_alasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_download"
                android:layout_width="@dimen/widthlayouttombolproses"
                android:visibility="gone"
                android:layout_height="@dimen/smallheightlayouttombolproses"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/style_button_proses"
                android:text="Download File"
                android:textAllCaps="false"
                android:textSize="@dimen/sp12"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>