<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp5">

        <ImageView
            android:id="@+id/img_expand"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:padding="@dimen/dp5" />

        <TextView
            android:id="@+id/txt_date_terbit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dp5"/>

        <TextView
            android:id="@+id/txt_date_berlaku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dp5"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="@dimen/dp5"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:paddingStart="@dimen/dp30"
        android:paddingEnd="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        android:paddingTop="@dimen/dp5"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jenis"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp14"
            android:layout_marginEnd="@dimen/dp10"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Terbit"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_jenis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/txt_terbit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alasan SP"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp10"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txt_jenis" />

        <TextView
            android:id="@+id/txt_alasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="#E4E4E4"/>

</LinearLayout>