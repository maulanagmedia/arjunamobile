<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/minggu1uanglembur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Minggu Ke-1"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tanggal1uanglembur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/minggu1uanglembur"
            android:layout_below="@+id/minggu1uanglembur"
            android:text="21/01/2017 - 24/01/2017"
            android:textColor="#000000"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/dropdown"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dropdowntableparent"
            android:layout_toRightOf="@+id/tanggal1uanglembur"
            android:src="@drawable/ganti_panah" />
        <!--<RelativeLayout
            android:id="@+id/pemisahbiru1uanglembur"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:background="#145692"
            android:layout_toRightOf="@+id/dropdown"
            android:layout_marginLeft="24dp">
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/dropdown">

            <TextView
                android:id="@+id/jumlaharga1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>